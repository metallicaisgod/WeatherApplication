<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowTranslucentStatus">true</item>
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="ShapeAppearance.CircularBorderForMainImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">35dp</item>
        <item name="cornerSizeBottomRight">35dp</item>
    </style>

    <style name="ShapeAppearance.CircularBorderForOthers" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="ShapeAppearance.CircularBorderForSwipeButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="MainText">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">#2E004E</item>
    </style>

    <style name="Subhead">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#1E1B1B</item>
    </style>

    <style name="Info">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#1E1B1B</item>
    </style>

    <style name="DayForecast">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ConditionForecast">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#494649</item>
    </style>

    <style name="HourlyForecastTime">
        <item name="android:textSize">13.16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="HourlyForecastDegrees">
        <item name="android:textSize">18.8sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="RainChanceText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>